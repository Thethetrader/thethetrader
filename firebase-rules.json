{
  "rules": {
    "signals": {
      ".read": true,
      ".write": true,
      ".indexOn": ["channel_id", "timestamp"]
    },
    "messages": {
      ".read": true,
      ".write": true,
      ".indexOn": ["channel_id", "timestamp"]
    },
    "user_profiles": {
      ".read": true,
      ".write": true
    },
    "fcm_tokens": {
      ".read": true,
      ".write": true
    },
    "profit-loss-chat": {
      ".read": true,
      ".write": true,
      ".indexOn": ["createdAt", "senderId"]
    },
    "messageReactions": {
      ".read": true,
      ".write": true
    },
    "personal_trades": {
      ".read": true,
      ".write": true,
      "$userId": {
        ".read": true,
        ".write": true,
        ".indexOn": ["created_at", "date", "timestamp"]
      }
    }
  }
} 